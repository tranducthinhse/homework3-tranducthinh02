<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- subtle black shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Chalkboard layer -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <!-- Simulate chalkboard with slight gradient -->
            <gradient
                android:startColor="#4E342E"
                android:endColor="#3E2723"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#795548" />
            <corners android:radius="16dp" />
            <padding android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

</layer-list>
